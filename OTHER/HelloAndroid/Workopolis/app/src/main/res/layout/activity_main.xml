<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edvantis.workopolis.activity.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/bright_foreground_disabled_material_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Search Results"
            android:id="@+id/textView13"
            android:textColor="@color/accent_material_light"
            android:layout_marginLeft="111dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:id="@+id/listView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineProvider="background"
        android:divider="@color/abc_search_url_text_normal"
        android:background="@color/bright_foreground_disabled_material_dark">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="&lt;- Prev. Page"
                android:id="@+id/viewPrevPage"
                android:textColor="@color/accent_material_light"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="&lt;0>"
                android:id="@+id/viewPageCounter"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textColor="@color/accent_material_light"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Next Page ->"
                android:id="@+id/viewNextPage"
                android:layout_gravity="left|center_vertical"
                android:textColor="@color/accent_material_light" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
