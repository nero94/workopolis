<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edvantis.workopolis.workopolis" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.edvantis.workopolis.activity.LoginActivity" android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name="com.edvantis.workopolis.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.edvantis.workopolis.activity.DescriptionActivity" android:theme="@style/AppTheme" />
        <activity android:name="com.edvantis.workopolis.activity.SignupActivity" android:theme="@style/AppTheme" />
        <activity android:name="com.edvantis.workopolis.activity.SearchActivity" android:theme="@style/AppTheme" />
    </application>

</manifest>